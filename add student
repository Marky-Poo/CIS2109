import mysql.connector
from tkinter import *

# Establish the connection with database
# I don't know the name of the database so I just listed them randomly
conn = mysql.connector.connect(
    user = 'roor', password = 'password', host = '1.2.3.4', database = 'data')

# Create a cursor object
cursor = conn.cursor()

def add_student():
    
    student_name = name.get()
    student_id = ID.get()
    
    # sql query to add student
    isnert_student = (
        "Insert into Student(Student_ID, Student_name)"
        "Values (%s, %s)"
    )
    
    data = (student_name, student_id)
    
    try:
        # execute sql command
        cursor.execute(insert_student, data)
        
        # commit changes in database
        conn.commit()
        
    except:
        # rolling back if error occurs
        conn.rollback()
        
    print("student added")
    
    # closing the connection
    conn.close()
    
window = Tk()

submit = Button(window, text = "submit", command = submit)
submit.pack(side = RIGHT)

ID = Entry()
ID.config(font = ('Lucida Console', 20))
ID.config(bg = '#111111')
ID.config(fg = 'green')
ID.config(width = 20)
ID.pack()

name = Entry()
name.config(font = ('Lucida Console', 20))
name.config(bg = '#111111')
name.config(fg = 'green')
name.config(width = 20)
name.pack()
window.mainloop()
